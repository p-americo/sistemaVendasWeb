@model IEnumerable<SistemaDeVendasWeb.Models.Seller>

@{
    ViewData["Title"] = "Sellers";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New</a>

</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.BirthDate)</th>
            <th>@Html.DisplayNameFor(model => model.BaseSalary)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var seller in Model)
        {
            <tr>
                <td>@seller.Name</td>
                <td>@seller.Email</td>
                <td>@seller.BirthDate.ToString("dd/MM/yyyy")</td>
                <td>@string.Format("{0:C2}", seller.BaseSalary)</td>
                <td>
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@seller.Id">Details</a>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@seller.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@seller.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
